@model Shop.Application.ProductCart.Queries.ProductInCardViewModel;
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <main role="main" class="pb-3">
        <h2> Действия с товарами</h2>
        <div>
            <h4>Выберите из списка</h4>
            <hr>
            <div class="row">
                <div class="col-md-3">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" id="cart" href="#">Корзина с товарами</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="liked" href="#">Понравившиеся товары</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="history" href="#">История покупок</a>

                        </li>
                    </ul>
                </div>
                <div class="col-md-9">
                    <h4>Корзина с товарами</h4>
                    <div>
                        @foreach (var item in Model.ProductFromCart)
                        {
                            <div class="card col-md-4 m-2 " style="width: 18rem;">
                                <img src="/images/Products/@item.Image" class="card-img-top" alt="не удалось загрузить фото">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <h4 class="card-text">@item.Price</h4>
                                </div>
                            </div>
                            <br />

                        }

                    </div>
                </div>
            </div>

        </div>
    </main>

</div>


