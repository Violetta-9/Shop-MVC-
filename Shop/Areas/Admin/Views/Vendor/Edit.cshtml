@model Shop.Domain.Models.Vendor;
@{
    ViewData["Title"]="Редактирование поставщика";
}
<form  asp-area="Admin" asp-controller="Vendor" asp-action="Edit" method="post">
    <div class="form-group">
        <lable>Название поставщика</lable>
        <input type="text" value="@Model.Name" name="vendorName" class="form-control">
    </div>
    <div class="form-group">
        <lable>Описание поставщика</lable>
        <input type="text" value="@Model.Description" name="vendorDescription" class="form-control">
    </div>
    <input type="hidden" value="@Model.Id" name="vendorId">
    <button type="submit" class=" btn bg-success">Сохранить</button>
</form>

