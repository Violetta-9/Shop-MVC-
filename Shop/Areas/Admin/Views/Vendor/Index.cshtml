@model Shop.Application.Vendors.Queries.VendorsViewModel;
@{
    ViewData["Title"] = "Поставщики";
}

<table class="table table-bordered">
    <thead>
    <tr>
        <th scope="col">Название</th>
        <th scope="col">Описание</th>
        <th scope="col">Действие</th>
      
    </tr>
    </thead>
    <tbody>
    
        @foreach (var vendor in Model.Vendors)
        {  
            <tr>
                <td> @vendor.Name</td>
                <td>@vendor.Description</td>
                <td>
                    <a class="btn bg-primary" asp-area="Admin" asp-controller="Vendor" asp-action="Delete">Удалить</a>
                </td>
            </tr>
 
         }

    
</table>

<a  class="btn bg-primary" asp-area="Admin" asp-controller="Vendor" asp-action="Create">Добавить</a>