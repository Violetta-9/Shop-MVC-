@model Shop.Application.Vendors.Queries.VendorsViewModel;
@{
    ViewData["Title"] = "Поставщики";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Название</th>
            <th scope="col">Описание</th>
            <th scope="col">Действие</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var vendor in Model.Vendors)
        {
            <tr>
                <td> @vendor.Name</td>
                <td>@vendor.Description</td>
                <td>
                    <a class="btn bg-danger" onclick="confirmDeleteVendor(@vendor.Id)" @*asp-area="Admin" asp-controller="Vendor" asp-action="Delete" asp-route-vendorId="@vendor.Id"*@>Удалить</a>
                    <a class="btn bg-secondary" asp-area="Admin" asp-controller="Vendor" asp-action="Edit" asp-route-vendorId="@vendor.Id">Редактировать</a>
                </td>
            </tr>

        }


</table>

<a class="btn bg-success" asp-area="Admin" asp-controller="Vendor" asp-action="Create">Добавить</a>