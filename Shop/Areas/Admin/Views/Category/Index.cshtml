@model Shop.Application.Categories.Queries.CategoriesViewModel;
@{
    ViewData["Title"] = "Управление категориями";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<table class="table  table-bordered">
    <thead>
    <tr>
        
        <th scope="col">Название</th>
        <th scope="col">Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model.Categories)
    {
        <tr>

            <th>@category.Name</th>
            <td>
                <a class="btn bg-danger" onclick="confirmDeleteCategory(@category.Id)">Удалить</a>

                <a class="btn bg-secondary" asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-categoryId="@category.Id">Редактировать</a>
            </td>
        </tr>
    }

    </tbody>
</table>
<a class="btn bg-success" asp-area="Admin" asp-controller="Category" asp-action="Create">Добавить</a>

