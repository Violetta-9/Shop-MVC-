@model Shop.ViewModels.EditProductViewModel;
@{
    ViewData["Title"] = "Редактирование продукта";

}

<form asp-area="Admin" asp-controller="Products" asp-action="Edit" method="post"  enctype="multipart/form-data">
    <div class="form-group">
        <label>Название продукта</label>
        <input  type="text" name="title" value="@Model.Product.Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Описание продукта</label>
        <input  type="text" name="description" value="@Model.Product.Description" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Цена</label>
        <input  type="number" name="price" value="@Model.Product.Price" class="form-control"/>
    </div>
   
    <input visibility="hidden" type="hidden"  name="productId" value="@Model.Product.Id"/>
   <button class="btn bg-primary" name="submit">Добавить</button>
</form>




