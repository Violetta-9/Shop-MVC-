@model Shop.Application.Products.Queries.GetProducts.ProductViewModel;
@{
    ViewData["Title"] = "Управление продуктами";
}


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>


<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Продукт</th>
            <th scope="col">Описание</th>
            <th scope="col">Цена</th>
            <th scope="col">Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <th scope="row">@item.Name</th>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a class="btn bg-primary" onclick="confirmDelete(@item.Id)"> @* asp-route-[название параметра] определяет значение для определенного параметра*@
                        Удалить
                    </a>
                    <a class="btn bg-primary" asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-productId="@item.Id">
                        Редактировать
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>

