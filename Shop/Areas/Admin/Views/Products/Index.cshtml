@model Shop.Application.Products.Queries.GetProducts.ProductViewModel;
@{
    ViewData["Title"] = "Управление продуктами";
}
<table class="table table-bordered">
    <thead>
    <tr>
        <th scope="col">Продукт</th>
        <th scope="col">Описание</th>
        <th scope="col">Цена</th>
        <th scope="col">Действие</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Products)
    {
        <tr>
            <th scope="row">@item.Name</th>
            <td>@item.Description</td>
            <td>@item.Price.ToString("C")</td>
            <td>
                <a class="btn bg-primary" asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-ProductId="@item.Id">
                    Удалить
                </a>
            </td>
        </tr>
       
    }
    </tbody>
</table>
