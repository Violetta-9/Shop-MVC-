@{
    ViewData["Title"] = "Добавление продукта";
}

<form asp-area="Admin" asp-controller="Products" asp-action="Create" method="post" >
    <div class="form-group">
        <label>Название продукта</label>
        <input type="text" name="title" class="form-control">
    </div>
    <div class="form-group">
        <lable>Описание продукта</lable>
        <textarea class="form-control"  name="description" placeholder="Описание продукта" rows="3"></textarea>
    </div>
    <div class="form-group">
        <lable>Цена</lable>
        <input type="number" name="price" class="form-control">
    </div>
    <div class="form-group">
        <lable>Фото</lable>
        <input type="file" name="file" class="form-control-file" placeholder="Добавить фото товара">
    </div>
    <button type="submit" class="btn bg-primary"> Добавить</button>
   </form> 